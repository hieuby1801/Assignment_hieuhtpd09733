@model IEnumerable<WebClient.Models.OrderDetail>

@{
    ViewData["Title"] = "AddToCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header>
    <div class="container-fluid">
        <div class="row py-3 border-bottom">

            <div class="col-sm-4 col-lg-2 text-center text-sm-start d-flex gap-3 justify-content-center justify-content-md-start">
                <div class="d-flex align-items-center my-3 my-sm-0">
                    <a href="index.html">
                        <img src="~/images/logo.svg" alt="logo" class="img-fluid">
                    </a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar"
                        aria-controls="offcanvasNavbar">
                </button>
            </div>

            <div class="col-sm-6 offset-sm-2 offset-md-0 col-lg-3">
                <div class="search-bar row bg-light p-2 rounded-4">
                    <div class="col-11 col-md-7">
                        <form id="search-form" class="text-center" action="index.html" method="post">
                            <input type="text" class="form-control border-0 bg-transparent"
                                   placeholder="Search for more than 20,000 products">
                        </form>
                    </div>
                    <div class="col-1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                            <path fill="currentColor"
                                  d="M21.71 20.29L18 16.61A9 9 0 1 0 16.61 18l3.68 3.68a1 1 0 0 0 1.42 0a1 1 0 0 0 0-1.39ZM11 18a7 7 0 1 1 7-7a7 7 0 0 1-7 7Z" />
                        </svg>
                    </div>
                </div>
            </div>

            <div class="col-lg-7">
                <ul class="navbar-nav list-unstyled d-flex flex-row gap-3 gap-lg-5 justify-content-center flex-wrap align-items-center mb-0 fw-bold text-uppercase text-dark">
                    <li class="nav-item active">
                        <a href="index.html" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item active">
                        <a href="index.html" class="nav-link">Food List</a>
                    </li>
                    <li class="nav-item active">
                        <a href="index.html" class="nav-link">Cart</a>
                    </li>
                    <li>
                        <a href="#" class="p-2 mx-1">
                            <svg width="24" height="24">
                                <use xlink:href="#user"></use>
                            </svg>
                        </a>
                    <li class="nav-item active">
                        <a href="index.html" class="nav-link">Profile</a>
                    </li>
                    </li>

                    <li class="nav-item active">
                        <form asp-action="SignOut" method="get">
                            <button type="submit" class="nav-link">
                                SIGN OUT
                            </button>
                        </form>
                    </li>
                </ul>
            </div>

        </div>
    </div>
</header>

<h1>Your Cart</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityFood)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>            
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityFood)
            </td>
        </tr>
}
    </tbody>
</table>
<div class="button-area p-3 pt-0">
    <div class="row g-1 mt-2 justify-content-center">
        <div class="col-7 text-center">
            <form asp-action="Buy" method="post">
                <input type="hidden" name="orderId" value="@SessionInfo.orderId" />
                
                <button type="submit" class="btn btn-primary rounded-1 p-2 fs-7 btn-cart">
                    <svg width="18" height="18">
                        <use xlink:href="#cart"></use>
                    </svg> Buy
                </button>
            </form>
        </div>
    </div>
</div>
